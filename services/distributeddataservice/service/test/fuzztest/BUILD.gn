import("//build/ohos.gni")
import("//foundation/distributeddatamgr/datamgr_service/datamgr_service.gni")

#########################################################################################
group("fuzztest") {
  testonly = true

  deps = [ "dumphelper_fuzzer:fuzztest" ]

  if (datamgr_service_cloud) {
    deps += [ 
      "cloudservicestub_fuzzer:fuzztest",
      "syncstrategies_fuzzer:fuzztest",
      "cloudservicestubconcurrent_fuzzer:fuzztest",
    ]
  }

  if (datamgr_service_object) {
    deps += [
      "objectservicestub_fuzzer:fuzztest",
      "objectserviceimp1_fuzzer:fuzztest",
      "objectserviceimp2_fuzzer:fuzztest",
      "objectserviceimp3_fuzzer:fuzztest",
      "objectservicelistener_fuzzer:fuzztest",
      "objectservicestubconcurrent_fuzzer:fuzztest",
    ]
  }

  if (datamgr_service_rdb) {
    deps += [
      "rdbresultsetstub_fuzzer:fuzztest",
      "rdbservicestub_fuzzer:fuzztest",
      "rdbservicestubconcurrent_fuzzer:fuzztest",
    ]
  }

  if (datamgr_service_kvdb) {
    deps += [
      "kvdbservicestub_fuzzer:fuzztest",
      "kvdbservicestubconcurrent_fuzzer:fuzztest",
    ]
  }

  if (datamgr_service_data_share) {
    deps += [
      #Due to timeout risks from excessive fuzz cases, datashareservicestub_fuzzer split into three files.
      "datashareservicestub_fuzzer:fuzztest",
      "datashareservicestub2_fuzzer:fuzztest",
      "datashareservicestub3_fuzzer:fuzztest",
      "datashareserviceimpl_fuzzer:fuzztest",
      "datasharesubscriber_fuzzer:fuzztest",
    ]
  }

  if (datamgr_service_udmf) {
    deps += [
      "udmfserviceasynprocess_fuzzer:fuzztest" ,
      "udmfserviceasynprocessconcurrent_fuzzer:fuzztest",
      "udmfservicecheckkeyandintention_fuzzer:fuzztest" ,
      "udmfservicecheckpermission_fuzzer:fuzztest",
      "udmfservicechecktransferparams_fuzzer:fuzztest",
      "udmfservicedata_fuzzer:fuzztest",
      "udmfservicedataconcurrent_fuzzer:fuzztest",
      "udmfservicedatamanager_fuzzer:fuzztest",
      "udmfservicedatamanagerconcurrent_fuzzer:fuzztest",
      "udmfservicedelaydata_fuzzer:fuzztest",
      "udmfservicedelaydataconcurrent_fuzzer:fuzztest",
      "udmfservicehandleappshareoption_fuzzer:fuzztest",
      "udmfservicehandleappshareoptionconcurrent_fuzzer:fuzztest",
      "udmfservicehandledbstatus_fuzzer:fuzztest",
      "udmfserviceprivilege_fuzzer:fuzztest",
      "udmfserviceprivilegeconcurrent_fuzzer:fuzztest",
      "udmfserviceprocessdata_fuzzer:fuzztest",
      "udmfserviceremoteinteraction_fuzzer:fuzztest",
      "udmfserviceremoteinteractionconcurrent_fuzzer:fuzztest",
      "udmfservicesyncandmeta_fuzzer:fuzztest",
      "udmfservicesyncandmetaconcurrent_fuzzer:fuzztest",
      "udmfserviceverifypermission_fuzzer:fuzztest",
    ]
  }
}

##############################hydra-fuzz########################################
import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/distributeddatamgr/datamgr_service/datamgr_service.gni")

##############################fuzztest##########################################
ohos_fuzztest("ObjectServiceImp1FuzzTest") {
  module_out_path = "datamgr_service/datamgr_service"

  include_dirs = [
    "${data_service_path}/service/object/include",
    "${data_service_path}/service/object/asset_loader",
  ]

  fuzz_config_file =
      "${data_service_path}/service/test/fuzztest/objectserviceimp1_fuzzer"

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  sources = [
    "objectserviceimp1_fuzzer.cpp",
  ]

  deps = [
    "${data_service_path}/adapter/account:distributeddata_account",
    "${data_service_path}/adapter/communicator:distributeddata_communicator",
    "${data_service_path}/framework:distributeddatasvcfwk",
    "${data_service_path}/service:distributeddatasvc",
    "${data_service_path}/service/object:distributeddata_object",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "ability_runtime:dataobs_manager",
    "access_token:libaccesstoken_sdk",
    "access_token:libtokenid_sdk",
    "dfs_service:distributed_file_daemon_kit_inner",
    "hilog:libhilog",
    "kv_store:distributeddata_inner",
    "kv_store:distributeddata_mgr",
    "kv_store:distributeddb",
  ]

  if (dm_part_is_enabled && datamgr_service_distributed_capability) {
    external_deps += [ "dmsfwk:distributed_sdk", ]
  }
  if (datamgr_service_object) {
    external_deps += [
      "data_object:distributeddataobject_impl",
      "data_object:data_object_inner",
    ]
  }
}

###############################################################################
group("fuzztest") {
  testonly = true

  deps = [ ":ObjectServiceImp1FuzzTest" ]
}
###############################################################################
